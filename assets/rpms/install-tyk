#!/bin/bash
cd $(dirname $0)

dep_rpmlist=""
for rpm in deps/*.rpm 
do
  if [[ -f $rpm ]]
  then
    dep_rpmlist="$dep_rpmlist $rpm"
  fi
done
if [[ -n $dep_rpmlist ]]
then
  yum --disablerepo=* localinstall -y $dep_rpmlist
fi

tyk_rpmlist=""
for rpm in tyk/*
do
  if [[ -f $rpm ]]
  then
    tyk_rpmlist="$tyk_rpmlist $rpm"
  fi
done
if [[ -n $tyk_rpmlist ]]
then
  yum install -y $tyk_rpmlist
fi
